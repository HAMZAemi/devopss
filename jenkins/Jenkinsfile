pipeline {
    agent any
    
    stages {
        stage('Set up') {
            steps {
                // Définir le chemin d'accès à Maven
                sh 'export PATH=$PATH:/opt/apache-maven-3.6.3/bin' 
            }
        }
        stage('Build') {
            steps {
                sh '/opt/apache-maven-3.6.3/bin/mvn -B -DskipTests clean package' 
                sh 'cd target/test-classes && ls '
                sh 'cd target/maven-archiver && ls '
                sh 'cd target/test-classes && ls '
            }
        }
        stage('Test') {
            steps {
                sh '/opt/apache-maven-3.6.3/bin/mvn test' 
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
          stage('Deliver') {
            steps {
                script {
                    def nexusUrl = 'http://192.99.35.61:8081/repository/hamza/'
                    def nexusUsername = 'exosdata'  
                    def nexusPassword = 'stage'
                    def nexusRepository = 'hamza'

                    sh "curl -u ${nexusUsername}:${nexusPassword} --upload-file ./target/my-app-1.0-SNAPSHOT.jar ${nexusUrl}"
                    sh "curl -u ${nexusUsername}:${nexusPassword} --upload-file ./target/maven-archiver/pom.properties ${nexusUrl}"
                    sh "curl -u ${nexusUsername}:${nexusPassword} --upload-file ./target/maven-status ${nexusUrl}"
                    sh "curl -u ${nexusUsername}:${nexusPassword} --upload-file ./target/generated-sources ${nexusUrl}"
                    sh "curl -u ${nexusUsername}:${nexusPassword} --upload-file ./target/test-classes ${nexusUrl}"
                    sh "curl -u ${nexusUsername}:${nexusPassword} -T target/ --path-as-is  -X PUT ${nexusUrl}"
                }
            }
        }
    }
}
